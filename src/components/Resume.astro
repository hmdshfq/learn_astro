---
import resumeLink from "../assets/EnglishCertificate_ PavelPaliakou.pdf";
---

<div class="resume">
    <a href={resumeLink} aria-label="download .pdf resume" download>Resume</a>
</div>

<style>
    .resume {
        text-align: center;
        margin: 1rem 0;
    }

    .resume a {
        text-decoration: none;
        padding: 0.5rem 2rem;
        border-radius: var(--border-radius);
        background-color: var(--primary-600);
        color: var(--dark-color);
        cursor: pointer;
    }

    :global(.dark) .resume a {
        background-color: var(--primary-700);
    }

    .resume a:hover {
        background-color: var(--primary-500);
    }

    :global(.dark) .resume a:hover {
        background-color: var(--primary-600);
    }
</style>